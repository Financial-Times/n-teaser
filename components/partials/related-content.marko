<ul class="o-teaser__related" if(!noRelatedContent && relatedContent)>
	<for (item in relatedContent)>
		$ const classes = item.classModifiers.map(modifier => `o-teaser__related-item--${modifier}`).join (' ')
		<li class="o-teaser__related-item ${classes}" data-content-id="${item.id}">
			<a data-trackable="related" href="${item.relativeUrl}">${item.title}</a>
		</li>
	</for>
</ul>
