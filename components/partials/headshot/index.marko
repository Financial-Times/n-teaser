import headshot from './headshot';
$ const teaserHeadshot = headshot(input);
<if(teaserHeadshot && !input.noHeadshot)>
	<!--HACK: n-image needs refactoring to alow applying lazy, responsive images without the image wrapper and classes -->
	<img
	width="75px"
	height="75px"
	data-srcset=(teaserHeadshot.imgAttrs['data-srcset'])
	sizes=(teaserHeadshot.imgAttrs.sizes)
	role=(teaserHeadshot.imgAttrs.role)
	alt=(teaserHeadshot.imgAttrs.alt)
	class="o-teaser__headshot n-image--lazy-loading"/>
</if>

