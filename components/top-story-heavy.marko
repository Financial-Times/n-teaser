import { topLevelClasses, isPlayableVideo } from '../helpers'
$ const isPlayableVideoTeaser = isPlayableVideo(input, 'top-story-heavy', out.global.flags);

<div class=(topLevelClasses(input, 'top-story-heavy')) data-o-component="o-teaser" data-trackable="teaser">

	<div class="o-teaser__content">

		<include('./partials/display-concept', input)/>

		<include('./partials/title', input)/>

		<include('./partials/standfirst', input)/>

		<include('./partials/timestamp', input)/>

		<include('./partials/actions', input)/>

	</div>

	<if(isPlayableVideoTeaser)>
		<include('./partials/playable-video', input)/>
	</if>
	<else>
		<include('./partials/main-image', input)/>
	</else>

</div>
